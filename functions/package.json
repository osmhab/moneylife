{
  "name": "functions",
  "private": true,
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "lint": "ESLINT_USE_FLAT_CONFIG=false node ./node_modules/eslint/bin/eslint.js --no-eslintrc -c .eslintrc.js --resolve-plugins-relative-to . \"src/**/*.{ts,js}\"",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false node ./node_modules/eslint/bin/eslint.js --no-eslintrc -c .eslintrc.js --resolve-plugins-relative-to . \"src/**/*.{ts,js}\" --fix",
    "build": "tsc -b",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.7.3"
  }
}
